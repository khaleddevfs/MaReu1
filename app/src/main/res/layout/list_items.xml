<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/color_circle"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/round_bg"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/meeting_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:lines="1"
        android:text="hello"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/delete_meetButton"
        app:layout_constraintStart_toEndOf="@+id/color_circle"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/delete_meetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_delete_24dp" />

    <TextView
        android:id="@+id/meeting_members"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:lines="1"
        android:text="hello kksdfjkhmksqdf sqdkfjgkjsqdf kqsdfkmj "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/delete_meetButton"
        app:layout_constraintStart_toEndOf="@id/color_circle"
        app:layout_constraintTop_toTopOf="@id/color_circle"
        tools:ignore="UnknownId" />

</androidx.constraintlayout.widget.ConstraintLayout>